{
  "build": {
    "beforeBuildCommand": "depot build",
    "devPath": "http://localhost:5173",
    "distDir": "../js/packages/bene-app/dist"
  },
  "package": {
    "productName": "Bene",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nota.bene",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Bene Reader",
        "width": 800,
        "height": 600
      }
    ]
  }
}
